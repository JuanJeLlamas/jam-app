<h2 >Listado de grupos por género</h2>
<section class="col-8  container justify-content-center shadow border-0 bg-light p-3 border secciones">


<div class="card card-body col-md-4 ">
{{#each eachArtist}}
<h4>{{this.username}}</h4>
<br>
<img src="{{this.imageProfile}}" alt="Image" width="200px">

<br>

<a class="btn btn-secondary justify-content-sm-center container" href="/groups/{{this._id}}/details">
    Ver más</a>

<br>

<form action="/favorites/{{this._id}}" method="post">

    <a class="btn btn-secondary">Añadir a favoritos</a>
</form>


{{/each}}
</div>
</section>