<div id="form">
  <h2>Registro de usuario</h2>






<form action="/profile/signup" method="POST" class="row g-3">

  <div class="col-md-2">
    <label for="validationServer01" class="form-label">Nombre de usuario</label>
    <input type="text"  name="username" class="form-control is-valid" id="validationServer01" value="" required>
    <div class="valid-feedback">
     
    </div>
  </div>
  
  <div class="col-md-2">
    <label for="validationServerUsername" class="form-label">Email</label>
    <div class="input-group has-validation">
      <span class="input-group-text" id="inputGroupPrepend3">@</span>
      <input type="email"  name="email" class="form-control is-invalid" id="validationServerUsername" aria-describedby="inputGroupPrepend3 validationServerUsernameFeedback" required>
      <div id="validationServerUsernameFeedback" class="invalid-feedback">
        
      </div>
    </div>
  </div>
  <br>
  <div class="col-md-2">
    <label for="validationServer03" class="form-label">Contraseña</label>
    <input type="password" name="password" class="form-control is-invalid" id="validationServer03" aria-describedby="validationServer03Feedback" required>
    <div id="validationServer03Feedback" class="invalid-feedback">
      
    </div>
  </div>

  <div class="col-md-3">
    <label for="validationServer04" class="form-label">Yo soy...</label>
    <select class="form-select is-invalid" id="validationServer04" aria-describedby="validationServer04Feedback" required>
      <option selected disabled value="">Choose...</option>
      <option value="particular">Particular</option>
      <option value="artista">Artista</option>    
    </select>
    <div id="validationServer04Feedback" class="invalid-feedback">
     
    </div>
  </div>
  
  
  <div class="col-12">
    <button class="btn btn-success" type="submit">Crear cuenta</button>
  </div>
  {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
</form>






